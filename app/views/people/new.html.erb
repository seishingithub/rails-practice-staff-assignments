<h1>Add a Staff Member</h1>

<%= render partial: 'common/errors', locals: {person: @person} %>

<%= form_for @person do |f| %>

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "i.e. Dr." %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>

<% end %>